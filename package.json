{
  "name": "bitcolor",
  "version": "1.0.0-alpha",
  "keywords": [
    "color"
  ],
  "description": "Small and simple color manipulation library",
  "main": "index.js",
  "repository": "git@github.com:pocka/bitcolor.git",
  "author": "Shota Fuji <pockawoooh@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc --declaration --outDir dist",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest",
    "docs": "http-server ./docs",
    "format": "eslint --fix 'src/**/*.ts'",
    "fmt": "npm run format"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "http-server": "^0.11.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
